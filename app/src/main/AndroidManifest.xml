<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.alex.stundenplan"
    android:configChanges="orientation"
    android:versionCode="18"
    android:versionName="1.6.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>

    <application
        android:configChanges="orientation"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/FHBTheme" >
        <activity
            android:name="org.alex.stundenplan.wellcome"
            android:configChanges="orientation"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.alex.stundenplan.Home"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name="org.alex.stundenplan.Plan"
            android:configChanges="orientation"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="org.alex.stundenplan.DrawerActivity"
            android:configChanges="orientation"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="org.alex.stundenplan.iq.EventActivity"
            android:configChanges="orientation"
            android:noHistory="true" >

        </activity>
        <activity
            android:name="org.alex.stundenplan.iq.EventDetailActivity"
            android:configChanges="orientation"
            android:noHistory="true" >
        </activity>
        <activity android:name="org.alex.stundenplan.Login" >
        </activity>
        <activity
            android:name="org.alex.stundenplan.mensa.MensaActivity"
            android:configChanges="orientation"
            android:noHistory="true" >
        </activity>
    </application>

</manifest>