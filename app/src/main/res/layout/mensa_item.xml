<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_mensaDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#9F000F"
        android:lineSpacingMultiplier="1.3"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textColor="#ffffff"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_mensaMeal0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_mensaDate"
        android:background="#f8f8ff"
        android:lineSpacingMultiplier="1.3"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textColor="#323232"
        android:textSize="17sp"
        android:dividerHeight="1dp"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>
    <TextView
        android:id="@+id/textView_mensaMeal1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_mensaMeal0"
        android:background="#f8f8ff"
        android:lineSpacingMultiplier="1.3"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textColor="#323232"
        android:textSize="17sp"
        android:dividerHeight="1dp"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>
    <TextView
        android:id="@+id/textView_mensaMeal2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_mensaMeal1"
        android:background="#f8f8ff"
        android:lineSpacingMultiplier="1.3"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textColor="#323232"
        android:textSize="17sp"
        android:dividerHeight="1dp"
        />
    <TextView
        android:id="@+id/textView_mensaMeal3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_mensaMeal2"
        android:background="#f8f8ff"
        android:lineSpacingMultiplier="1.3"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textColor="#323232"
        android:textSize="17sp"
        />
    <TextView
        android:id="@+id/textView_mensaMeal4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_mensaMeal3"
        android:background="#f8f8ff"
        android:lineSpacingMultiplier="1.3"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textColor="#323232"
        android:textSize="17sp"
        />

</RelativeLayout>